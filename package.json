{
    "private": true,
    "name": "dumi-site",
    "version": "1.0.0",
    "scripts": {
        "dev": "dumi dev",
        "docs:build": "dumi build",
        "docs:deploy": "gh-pages -d docs-dist",
        "build": "father-build",
        "release": "npm run build && npm publish",
        "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
        "test": "umi-test",
        "test:coverage": "umi-test --coverage",
        "deploy": "dumi build && gh-pages -d dist"
    },
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "typings": "dist/index.d.ts",
    "gitHooks": {
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*.{js,jsx,less,md,json}": [
            "prettier --write"
        ],
        "*.ts?(x)": [
            "prettier --parser=typescript --write"
        ]
    },
    "dependencies": {
        "react": "^17.0.1"
    },
    "devDependencies": {
        "@umijs/test": "^3.3.7",
        "dumi": "^1.1.4",
        "father-build": "^1.19.1",
        "gh-pages": "^3.1.0",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "yorkie": "^2.0.0"
    }
}
